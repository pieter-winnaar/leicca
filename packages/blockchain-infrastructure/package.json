    "did-resolver": "^4.1.0",
    "jose": "^6.1.0",
    "satoshi-token": "^0.0.4",
    "web-did-resolver": "^2.0.30"
  },
  "peerDependencies": {
    "@bsv/sdk": "*",
    "@mintblue/sdk": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "^2.1.8",
    "tsup": "^8.0.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
