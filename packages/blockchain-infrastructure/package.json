{
  "name": "@design-system-demo/blockchain-infrastructure",
  "version": "0.1.0",
  "description": "Blockchain infrastructure services for BSV operations",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "tsup --watch",
