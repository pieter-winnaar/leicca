{
  "name": "@design-system-demo/sdk-integration",
  "version": "0.1.0",
  "private": true,
  "description": "SDK wrapper for @mintblue/sdk and @bsv/sdk",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "echo 'No unit tests - MintBlueSDKService tested via integration tests in blockchain-infrastructure'",
    "test:watch": "echo 'No unit tests - MintBlueSDKService tested via integration tests in blockchain-infrastructure'",
    "test:coverage": "echo 'No unit tests - MintBlueSDKService tested via integration tests in blockchain-infrastructure'",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {},
  "peerDependencies": {
    "@mintblue/sdk": "^9.0.1",
    "@bsv/sdk": "*",
    "js-1sat-ord": "*"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.56.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
